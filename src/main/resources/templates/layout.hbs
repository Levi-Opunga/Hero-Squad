{{#block "header"}}

    <!DOCTYPE html>
    <html>
    <head>
        <title>{{#block "title"}}Heroes App{{/block}}
        </title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
              integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
              crossorigin="anonymous">
<!--Adding style sheet in relation to root folder in order for /squads/:id to be styled -->
        {{#if position}}
            <link rel="stylesheet" href="../app.css">
        {{else}}
            <link rel="stylesheet" href="app.css">
        {{/if}}
    </head>
    <body>



    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/hero-form">Add Hero <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/squad-form">Add Squad</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/squad-allocate">Allocate Hero Squad</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                           data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            Squads
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            {{#if squads}}
                                {{#each squads}}
                                    <a class="dropdown-item" href="/squad/{{id}}">{{name}}</a>
                                {{/each}}
                            {{/if}}
                            <a class="dropdown-item" href="/squad-form">Add Squad</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

{{/block}}
<main class="mt-5">
    <div class="container-fluid pt-5">
        <div class="row">
            <div class="list-group col-md-3">
                <a href="#" class="list-group-item list-group-item-action active">
                    Available Squads
                </a>
                {{#if squads}}
                    {{#each squads}}
                        <a href="squad/{{id}}" class="list-group-item list-group-item-action">{{name}}</a>

                    {{/each}}
                {{else}}
                    <a href="#" class="list-group-item list-group-item-action">There are squads added currently</a>
                {{/if}}
            </div>
            <div class="d-flex" style="height: 100%;">
                <div class="vr"></div>
            </div>
            <div class="text-center col-md-9">
            <!-- begin inner template-->

            {{#block "content"}}
            {{/block}}
            </div>
        </div>
</main>


